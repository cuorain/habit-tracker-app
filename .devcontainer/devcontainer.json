{
    "name": "Habit Tracker Node.js Dev Container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/habit-tracker-app",
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode"
            }
        }
    },
    "forwardPorts": [8080, 5433],
    "portsAttributes": {
        "8080": {
            "label": "Node.js App",
            "onAutoForward": "notify"
        },
        "5433": {
            "label": "PostgreSQL",
            "onAutoForward": "silent"
        }
    },
    "remoteUser": "node",
    "updateRemoteUserUID": true,
    "remoteEnv": {
        "LANG": "en_US.UTF-8",
        "LC_ALL": "en_US.UTF-8",
        "LANGUAGE": "en_US:en",
        "GIT_CONFIG_NOSYSTEM": "1"
    },
    "postCreateCommand": "chmod +x ./.devcontainer/init-config.sh ./.devcontainer/git-setup.sh && ./.devcontainer/init-config.sh && ./.devcontainer/git-setup.sh"
}